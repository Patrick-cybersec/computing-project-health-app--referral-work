<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_medium">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_menu"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="?attr/colorPrimary"
        app:title="Keep Fit"
        app:titleTextColor="@android:color/white"
        app:menu="@menu/toolbar_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top Title: Keep-fit Programme -->
    <TextView
        android:id="@+id/keepfit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keep-fit Programme"
        android:textSize="@dimen/text_size_title"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/toolbar_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_large"/>

    <!-- HIIT Text -->
    <TextView
        android:id="@+id/hiit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HIIT (Repeat 4 times)"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintTop_toBottomOf="@id/keepfit_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_medium"/>

    <!-- Push-up Icon and Caption -->
    <ImageView
        android:id="@+id/pushup_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pushup_icon"
        app:layout_constraintTop_toBottomOf="@id/hiit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/squat_icon"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_small"/>

    <TextView
        android:id="@+id/pushup_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 times"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintTop_toBottomOf="@id/pushup_icon"
        app:layout_constraintStart_toStartOf="@id/pushup_icon"
        app:layout_constraintEnd_toEndOf="@id/pushup_icon"
        android:layout_marginTop="@dimen/margin_small"/>

    <!-- Squat Icon and Caption -->
    <ImageView
        android:id="@+id/squat_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/squat_icon"
        app:layout_constraintTop_toBottomOf="@id/hiit_text"
        app:layout_constraintStart_toEndOf="@id/pushup_icon"
        app:layout_constraintEnd_toStartOf="@id/situp_icon"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"/>

    <TextView
        android:id="@+id/squat_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 times"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintTop_toBottomOf="@id/squat_icon"
        app:layout_constraintStart_toStartOf="@id/squat_icon"
        app:layout_constraintEnd_toEndOf="@id/squat_icon"
        android:layout_marginTop="@dimen/margin_small"/>

    <!-- Sit-up Icon and Caption -->
    <ImageView
        android:id="@+id/situp_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/situp_icon"
        app:layout_constraintTop_toBottomOf="@id/hiit_text"
        app:layout_constraintStart_toEndOf="@id/squat_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_small"/>

    <TextView
        android:id="@+id/situp_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 times"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintTop_toBottomOf="@id/situp_icon"
        app:layout_constraintStart_toStartOf="@id/situp_icon"
        app:layout_constraintEnd_toEndOf="@id/situp_icon"
        android:layout_marginTop="@dimen/margin_small"/>

    <!-- Rest Text -->
    <TextView
        android:id="@+id/rest_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="rest 30secs"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintTop_toBottomOf="@id/pushup_caption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_medium"/>

    <!-- Description Text -->
    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Efficient for burning fat"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintTop_toBottomOf="@id/rest_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_medium"/>

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/videoButton"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_small"/>

    <!-- Video Button -->
    <Button
        android:id="@+id/videoButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="Video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/startButton"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_small"/>

    <!-- Start Button -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"/>
</androidx.constraintlayout.widget.ConstraintLayout>