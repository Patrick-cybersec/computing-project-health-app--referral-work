<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_medium">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_menu"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Gym Weighing Record"
        app:titleTextColor="@android:color/white"
        app:menu="@menu/toolbar_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/heart_rate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Heart Rate:\n -- BPM"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toEndOf="@+id/stop_button"
        app:layout_constraintTop_toBottomOf="@id/timer_text" />

            <!-- Duration Time Section -->

    <TextView
        android:id="@+id/duration_label"
        android:layout_width="202dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="84dp"
        android:text="Duration time:"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timer_text"
        android:layout_width="134dp"
        android:layout_height="54dp"
        android:layout_marginStart="@dimen/margin_small"
        android:text="00:00:00"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@id/duration_label"
        app:layout_constraintTop_toTopOf="@id/duration_label" />

    <!-- Weight * Repetition Section -->

    <!-- Total Workload Section -->

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginStart="108dp"
        android:layout_marginTop="24dp"
        android:text="Start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/duration_label" />

    <Button
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="24dp"
        android:text="Stop"
        app:layout_constraintStart_toEndOf="@+id/start_button"
        app:layout_constraintTop_toBottomOf="@id/duration_label" />

    <TextView
        android:id="@+id/weight_repetition_label"
        android:layout_width="181dp"
        android:layout_height="30dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="20dp"
        android:text="Weight * Repetition:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_button" />

    <EditText
        android:id="@+id/weight_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:hint="Weight (kg)"
        android:inputType="numberDecimal"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weight_repetition_label"
        app:layout_constraintWidth_percent="0.4" />

    <EditText
        android:id="@+id/repetition_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Repetition"
        android:inputType="number"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/weight_input"
        app:layout_constraintTop_toBottomOf="@id/weight_repetition_label"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/total_workload_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:text="Total workload:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weight_input" />

    <TextView
                android:id="@+id/total_workload_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 kg"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="@id/total_workload_label"
                app:layout_constraintStart_toEndOf="@id/total_workload_label"
                android:layout_marginStart="@dimen/margin_small"/>

            <!-- Mood Section -->
    <TextView
        android:id="@+id/mood_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mood:"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintBottom_toTopOf="@+id/mood_happy"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/mood_happy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/happy_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/mood_neutral"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/mood_neutral"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/neutral_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mood_happy" />

    <ImageView
        android:id="@+id/mood_sad"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/bad_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mood_neutral" />

            <!-- Back and Submit Buttons -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginBottom="@dimen/margin_medium"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/submit_button" />

            <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:text="Submit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"/>

        </androidx.constraintlayout.widget.ConstraintLayout>