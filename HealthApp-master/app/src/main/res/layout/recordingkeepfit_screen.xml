<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_medium">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_menu"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="8dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/toolbar_menu"
        app:title="Keep Fit Record"
        app:titleTextColor="@android:color/white" />

    <!-- Duration Time Section -->
    <TextView
        android:id="@+id/duration_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="100dp"
        android:text="Duration time:"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:text="00:00:00"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/duration_label"
        app:layout_constraintTop_toTopOf="@id/duration_label" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginStart="104dp"
        android:layout_marginTop="24dp"
        android:text="Start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/duration_label" />

    <Button
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="24dp"
        android:text="Stop"
        app:layout_constraintStart_toEndOf="@id/start_button"
        app:layout_constraintTop_toBottomOf="@id/duration_label" />

    <TextView
        android:id="@+id/heart_rate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Heart Rate:\n -- BPM"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toEndOf="@+id/stop_button"
        app:layout_constraintTop_toBottomOf="@id/timer_text" />

    <!-- Workout Selection Section -->
    <Button
        android:id="@+id/pushup_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:drawableTop="@drawable/pushup_icon"
        android:padding="@dimen/margin_small"
        android:text="Push-ups"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_button"
        app:layout_constraintWidth_percent="0.4" />

    <Button
        android:id="@+id/squat_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:drawableTop="@drawable/squat_icon"
        android:padding="@dimen/margin_small"
        android:text="Squats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pushup_icon"
        app:layout_constraintWidth_percent="0.4" />

    <Button
        android:id="@+id/situp_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:drawableTop="@drawable/situp_icon"
        android:text="Sit-ups"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/squat_icon"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/x5times1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="* 5 times"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/pushup_icon"
        app:layout_constraintTop_toTopOf="@+id/pushup_icon" />

    <TextView
        android:id="@+id/x5times2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="* 5 times"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/squat_icon"
        app:layout_constraintTop_toTopOf="@+id/squat_icon" />

    <TextView
        android:id="@+id/x5times3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="* 5 times"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/situp_icon"
        app:layout_constraintTop_toTopOf="@+id/situp_icon" />

    <TextView
        android:id="@+id/rest30secbetweensets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rest 30sec between sets"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/situp_icon" />

    <!-- Workout Sets Container -->
    <LinearLayout
        android:id="@+id/workout_sets_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rest30secbetweensets">

        <LinearLayout
            android:id="@+id/noofset1_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <Spinner
                android:id="@+id/noofsets1_spinner_0"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:entries="@array/noofsets"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/noofset2_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <Spinner
                android:id="@+id/noofsets2_spinner_0"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:entries="@array/noofsets"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/noofset3_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <Spinner
                android:id="@+id/noofsets3_spinner_0"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:entries="@array/noofsets"
                android:spinnerMode="dropdown" />
        </LinearLayout>
    </LinearLayout>

    <!-- Add Button -->
    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="8dp"
        android:text="Add Set"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/workout_sets_container" />

    <!-- Mood Section -->
    <TextView
        android:id="@+id/mood_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Mood:"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintBottom_toTopOf="@id/mood_happy"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/mood_happy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/happy_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/mood_neutral"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/neutral_icon"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/mood_happy"
        app:layout_constraintStart_toEndOf="@id/mood_happy" />

    <ImageView
        android:id="@+id/mood_sad"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/bad_icon"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/mood_happy"
        app:layout_constraintStart_toEndOf="@id/mood_neutral" />

    <!-- Back and Submit Buttons -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginBottom="@dimen/margin_medium"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/submit_button" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>