<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_medium">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_menu"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Awards"
        app:titleTextColor="@android:color/white"
        app:menu="@menu/toolbar_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Top Title: Aerobic Activities -->
            <TextView
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/star_icon"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/star_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/star"
                app:layout_constraintTop_toTopOf="@+id/star"
                app:layout_constraintBottom_toBottomOf="@+id/star" />

            <!-- Row 1: Ball and Running Buttons -->
            <Button
                android:id="@+id/starballButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:drawableTop="@drawable/ball_icon"
                android:padding="@dimen/margin_small"
                android:text="Ball"
                android:alpha="0.5"
                app:layout_constraintEnd_toStartOf="@id/starrunningButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/star"
                app:layout_constraintWidth_percent="0.4" />

            <Button
                android:id="@+id/starrunningButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:drawableTop="@drawable/running_icon"
                android:padding="@dimen/margin_small"
                android:text="Running"
                android:alpha="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/starballButton"
                app:layout_constraintTop_toBottomOf="@+id/star"
                app:layout_constraintWidth_percent="0.4" />

            <!-- Row 2: Swimming and Cycling Buttons -->
            <Button
                android:id="@+id/starswimmingButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:drawableTop="@drawable/swimming_icon"
                android:padding="@dimen/margin_small"
                android:text="Swimming"
                android:alpha="0.5"
                app:layout_constraintEnd_toStartOf="@id/starcyclingButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/starballButton"
                app:layout_constraintWidth_percent="0.4" />

            <Button
                android:id="@+id/starcyclingButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:drawableTop="@drawable/cycling_icon"
                android:padding="@dimen/margin_small"
                android:text="Cycling"
                android:alpha="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/starswimmingButton"
                app:layout_constraintTop_toBottomOf="@id/starrunningButton"
                app:layout_constraintWidth_percent="0.4" />

            <!-- Row 3: Skipping and Yoga Buttons -->
            <Button
                android:id="@+id/starskippingButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:drawableTop="@drawable/skipping_icon"
                android:padding="@dimen/margin_small"
                android:text="Skipping"
                android:alpha="0.5"
                app:layout_constraintEnd_toStartOf="@id/staryogaButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/starswimmingButton"
                app:layout_constraintWidth_percent="0.4" />

            <Button
                android:id="@+id/staryogaButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:drawableTop="@drawable/yoga_icon"
                android:padding="@dimen/margin_small"
                android:text="Yoga"
                android:alpha="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/starskippingButton"
                app:layout_constraintTop_toBottomOf="@id/starcyclingButton"
                app:layout_constraintWidth_percent="0.4" />

            <!-- Row 4: Sprint and Weightlifting Buttons -->
            <Button
                android:id="@+id/starsprintButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:drawableTop="@drawable/sprint_icon"
                android:padding="@dimen/margin_small"
                android:text="Sprint"
                android:alpha="0.5"
                app:layout_constraintEnd_toStartOf="@id/starweightliftingButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/starskippingButton"
                app:layout_constraintWidth_percent="0.4" />

            <Button
                android:id="@+id/starweightliftingButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:drawableTop="@drawable/weightlift_icon"
                android:padding="@dimen/margin_small"
                android:text="Weightlifting"
                android:alpha="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/starsprintButton"
                app:layout_constraintTop_toBottomOf="@id/staryogaButton"
                app:layout_constraintWidth_percent="0.4" />

            <!-- Row 5: Workout and Climbing Buttons -->
            <Button
                android:id="@+id/starworkoutButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:drawableTop="@drawable/workout_icon"
                android:padding="@dimen/margin_small"
                android:text="Workout"
                android:alpha="0.5"
                app:layout_constraintEnd_toStartOf="@id/starclimbingButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/starsprintButton"
                app:layout_constraintWidth_percent="0.4" />

            <Button
                android:id="@+id/starclimbingButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:drawableTop="@drawable/climbing_icon"
                android:padding="@dimen/margin_small"
                android:text="Climbing"
                android:alpha="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/starworkoutButton"
                app:layout_constraintTop_toBottomOf="@id/starweightliftingButton"
                app:layout_constraintWidth_percent="0.4" />

            <!-- Row 6: Gym Button -->
            <Button
                android:id="@+id/stargymButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:drawableTop="@drawable/gymming_icon"
                android:text="Gym"
                android:alpha="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/starworkoutButton"
                app:layout_constraintWidth_percent="0.4" />

            <Button
                android:id="@+id/starrehabilitationButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="@dimen/margin_small"
                android:padding="@dimen/margin_small"
                android:alpha="0.5"
                android:text="Rehabilitation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/stargymButton"
                app:layout_constraintTop_toBottomOf="@+id/starclimbingButton"
                app:layout_constraintWidth_percent="0.4" />

            <Button
                android:id="@+id/starkeepfitButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="@dimen/margin_small"
                android:padding="@dimen/margin_small"
                android:text="Keep Fit"
                android:alpha="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/starentertainmentButton"
                app:layout_constraintTop_toBottomOf="@+id/starrehabilitationButton"
                app:layout_constraintWidth_percent="0.4" />

            <Button
                android:id="@+id/starentertainmentButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:padding="@dimen/margin_small"
                android:text="Entertainment"
                android:alpha="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stargymButton"
                app:layout_constraintWidth_percent="0.4" />


            <!-- Back Button -->
            <Button
                android:id="@+id/starbackButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:text="Back"
                app:layout_constraintTop_toBottomOf="@+id/starkeepfitButton"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>