<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/margin_medium">

    <!-- Toolbar -->

    <!-- Duration Time Section -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_menu"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="8dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/toolbar_menu"
        app:title="Sprint Record"
        app:titleTextColor="@android:color/white" />

    <TextView
        android:id="@+id/heart_rate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Heart Rate:\n -- BPM"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toEndOf="@+id/stop_button"
        app:layout_constraintTop_toBottomOf="@id/timer_text" />

    <TextView
        android:id="@+id/duration_label"
        android:layout_width="202dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="84dp"
        android:text="Duration time:"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timer_text"
        android:layout_width="134dp"
        android:layout_height="54dp"
        android:layout_marginStart="@dimen/margin_small"
        android:text="00:00:00"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@id/duration_label"
        app:layout_constraintTop_toTopOf="@id/duration_label" />

    <!-- Weight * Repetition Section -->

    <!-- Total Workload Section -->

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginStart="108dp"
        android:layout_marginTop="24dp"
        android:text="Start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/duration_label" />

    <Button
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="24dp"
        android:text="Stop"
        app:layout_constraintStart_toEndOf="@+id/start_button"
        app:layout_constraintTop_toBottomOf="@id/duration_label" />

            <!-- Distance Section -->

    <TextView
        android:id="@+id/distance_label"
        android:layout_width="97dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:text="Distance:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_button" />

    <TextView
        android:id="@+id/distance_value"
        android:layout_width="55dp"
        android:layout_height="39dp"
        android:layout_marginStart="@dimen/margin_small"
        android:text="0 m"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/distance_label"
        app:layout_constraintTop_toTopOf="@id/distance_label" />

            <!-- Roundtrip Section -->

    <TextView
        android:id="@+id/roundtrip_label"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_marginTop="56dp"
        android:text="Roundtrip:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/distance_label" />

    <EditText
        android:id="@+id/roundtrip_input"
        android:layout_width="111dp"
        android:layout_height="45dp"
        android:layout_marginStart="@dimen/margin_small"
        android:hint="Rounds"
        android:inputType="number"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/roundtrip_label"
        app:layout_constraintTop_toTopOf="@id/roundtrip_label"
        app:layout_constraintWidth_percent="0.4" />

            <!-- Pacing Section -->

    <TextView
        android:id="@+id/pacing_label"
        android:layout_width="75dp"
        android:layout_height="36dp"
        android:layout_marginTop="48dp"
        android:text="Pacing:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/roundtrip_label" />

    <TextView
        android:id="@+id/pacing_value"
        android:layout_width="83dp"
        android:layout_height="33dp"
        android:layout_marginStart="@dimen/margin_small"
        android:text="0 s/m"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/pacing_label"
        app:layout_constraintTop_toTopOf="@id/pacing_label" />

            <!-- Mood Section -->
    <Spinner
        android:id="@+id/sp_activity_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/activity_types"
        android:prompt="@string/select_activity_prompt"
        app:layout_constraintBottom_toTopOf="@+id/mood_label"
        tools:layout_editor_absoluteX="16dp" />
    <TextView
        android:id="@+id/mood_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mood:"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintBottom_toTopOf="@+id/mood_happy"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/mood_happy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/happy_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/mood_neutral"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/mood_neutral"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/neutral_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mood_happy" />

    <ImageView
        android:id="@+id/mood_sad"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/bad_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mood_neutral" />

            <!-- Back and Submit Buttons -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginBottom="@dimen/margin_medium"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/submit_button" />

            <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:text="Submit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"/>

</androidx.constraintlayout.widget.ConstraintLayout>