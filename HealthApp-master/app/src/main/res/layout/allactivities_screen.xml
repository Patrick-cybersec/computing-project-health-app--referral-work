<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_medium">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar

        android:id="@+id/toolbar_menu"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="All Activities"
        app:titleTextColor="@android:color/white"
        app:menu="@menu/toolbar_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <!-- Top Title: Aerobic Activities -->
            <TextView
                android:id="@+id/allactivities_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Activities"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    <!-- Row 1: Ball and Gym Buttons -->
    <Button
        android:id="@+id/allactivitiesballButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ball"
        android:drawableTop="@drawable/ball_icon"
        android:padding="@dimen/margin_small"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintTop_toBottomOf="@id/allactivities_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/allactivitiesrunningButton"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_small"/>

            <Button
                android:id="@+id/allactivitiesrunningButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_medium"
                android:drawableTop="@drawable/running_icon"
                android:padding="@dimen/margin_small"
                android:text="Running"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/allactivitiesballButton"
                app:layout_constraintTop_toBottomOf="@id/allactivities_title"
                app:layout_constraintWidth_percent="0.4" />

    <!-- Row 2: Sprint and Weightlifting Buttons -->

            <Button
                android:id="@+id/allactivitiesswimmingButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:drawableTop="@drawable/swimming_icon"
                android:padding="@dimen/margin_small"
                android:text="Swimming"
                app:layout_constraintEnd_toStartOf="@id/allactivitiescyclingButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/allactivitiesballButton"
                app:layout_constraintWidth_percent="0.4" />

    <!-- Row 3: Workout and Yoga Buttons -->
            <Button
                android:id="@+id/allactivitiescyclingButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:drawableTop="@drawable/cycling_icon"
                android:padding="@dimen/margin_small"
                android:text="Cycling"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/allactivitiesswimmingButton"
                app:layout_constraintTop_toBottomOf="@+id/allactivitiesrunningButton"
                app:layout_constraintWidth_percent="0.4" />

            <!-- Back Button -->

            <Button
                android:id="@+id/allactivitiesskippingButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:drawableTop="@drawable/skipping_icon"
                android:padding="@dimen/margin_small"
                android:text="Skipping"
                app:layout_constraintEnd_toStartOf="@id/allactivitiesyogaButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/allactivitiesswimmingButton"
                app:layout_constraintWidth_percent="0.4" />

            <Button
                android:id="@+id/allactivitiesrehabilitationButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="@dimen/margin_small"
                android:padding="@dimen/margin_small"
                android:text="Rehabilitation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/allactivitiesgymButton"
                app:layout_constraintTop_toBottomOf="@+id/allactivitiesclimbingButton"
                app:layout_constraintWidth_percent="0.4" />

            <Button
                android:id="@+id/allactivitieskeepfitButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="@dimen/margin_small"
                android:padding="@dimen/margin_small"
                android:text="Keep Fit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/allactivitiesentertainmentButton"
                app:layout_constraintTop_toBottomOf="@+id/allactivitiesrehabilitationButton"
                app:layout_constraintWidth_percent="0.4" />

            <Button
                android:id="@+id/allactivitiesentertainmentButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:padding="@dimen/margin_small"
                android:text="Entertainment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/allactivitiesgymButton"
                app:layout_constraintWidth_percent="0.4" />

            <Button
                android:id="@+id/allactivitiesyogaButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:drawableTop="@drawable/yoga_icon"
                android:padding="@dimen/margin_small"
                android:text="Yoga"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/allactivitiesskippingButton"
                app:layout_constraintTop_toBottomOf="@+id/allactivitiescyclingButton"
                app:layout_constraintWidth_percent="0.4" />

            <Button
                android:id="@+id/allactivitiessprintButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:drawableTop="@drawable/sprint_icon"
                android:padding="@dimen/margin_small"
                android:text="Sprint"
                app:layout_constraintEnd_toStartOf="@id/allactivitiesweightliftingButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/allactivitiesskippingButton"
                app:layout_constraintWidth_percent="0.4" />

    <!-- Row 3: Workout and Yoga Buttons -->
            <Button
                android:id="@+id/allactivitiesweightliftingButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:drawableTop="@drawable/weightlift_icon"
                android:padding="@dimen/margin_small"
                android:text="Weightlifting"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/allactivitiessprintButton"
                app:layout_constraintTop_toBottomOf="@+id/allactivitiesyogaButton"
                app:layout_constraintWidth_percent="0.4" />

            <Button
                android:id="@+id/allactivitiesworkoutButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:drawableTop="@drawable/workout_icon"
                android:padding="@dimen/margin_small"
                android:text="Workout"
                app:layout_constraintEnd_toStartOf="@id/allactivitiesclimbingButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/allactivitiessprintButton"
                app:layout_constraintWidth_percent="0.4" />

            <Button
                android:id="@+id/allactivitiesclimbingButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:drawableTop="@drawable/climbing_icon"
                android:padding="@dimen/margin_small"
                android:text="Climbing"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/allactivitiesworkoutButton"
                app:layout_constraintTop_toBottomOf="@+id/allactivitiesweightliftingButton"
                app:layout_constraintWidth_percent="0.4" />

            <Button
                android:id="@+id/allactivitiesgymButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:drawableTop="@drawable/gymming_icon"
                android:text="Gym"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/allactivitiesworkoutButton"
                app:layout_constraintWidth_percent="0.4" />

            <Button
                android:id="@+id/allactivitiesbackButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:text="Back"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@id/allactivitiesentertainmentButton"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>